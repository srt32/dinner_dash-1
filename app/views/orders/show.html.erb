<h1>Your Order</h1>

<table>
  <tr>
    <th>Customer</th>
    <td><%= @order.user_id %></td>
  </tr>
  <tr>
    <th>Status:</th>
    <td><%= @order.status %></td>
  </tr>
  <tr>
    <th>Items:</th>
    <td><%= @order.order_items.count %></td>
  </tr>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Subtotal</th>
  </tr>
  <% @order.order_items.each do |item| %>
    <tr>
      <td><%= item.item.title %></td>
      <td><%= item.item.description %></td>
      <td><%= item.quantity %></td>
      <td><%= print_price item.item.price %></td>
      <td><%= print_price item.subtotal %></td>
      <td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <th>Order Total:</th>
      <td><%= %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Empty Cart", user_order_path(@order.user_id,@order.id), data: { confirm: 'Are you sure?' }, method: :delete %>
<%= link_to 'Edit', edit_user_order_path(@order.user_id,@order.id) %> |
<%= link_to 'Back', user_orders_path(@order.user_id) %>

