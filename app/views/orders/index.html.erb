<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.status %></td>
        <% if true %>
        <td><%= link_to 'Show', user_order_path(order.user_id,order.id), :id => 'show_link' %></td>
        <td><%= link_to 'Edit', edit_user_order_path(order.user_id, order.id) %></td>
        <td><%= link_to 'Destroy', user_order_path(order.user_id, order.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

